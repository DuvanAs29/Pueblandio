<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/editar"
    tools:context=".Home">


    <ImageView
        android:id="@+id/logo"
        android:src="@drawable/campo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintVertical_bias="0.1"
        />
    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="San Pedro"
        android:textStyle="bold"
        android:textSize="22dp"
        app:layout_constraintVertical_bias="0.05"

        />
    <Button
        android:id="@+id/botonhotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.2"
        app:layout_constraintTop_toBottomOf="@id/titulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/green"
        android:text="Hoteles"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/restaurantes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintTop_toBottomOf="@id/botonhotel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/whitesmoke"
        android:text="restaurante"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        />
    <Button
        android:id="@+id/sitios"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.01"
        app:layout_constraintTop_toBottomOf="@id/restaurantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:backgroundTint="@color/whitesmoke"
        android:text="sitios"
        android:layout_marginHorizontal="20dp"
        android:textColor="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>